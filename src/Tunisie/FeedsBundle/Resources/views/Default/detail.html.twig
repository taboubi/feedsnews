{% extends "TunisieFeedsBundle::layout.html.twig" %}



{% block content %}
 {{ render(controller('TunisieFeedsBundle:Default:header')) }}

 <div class="container-fluid page-container" style="padding-top:34px; position:relative">
    <div class="row-fluid">
    <div class="main-ct">
        

<div class="row-fluid">
    <ul itemscope itemtype="http://schema.org/Article" class="pluginMain span12">
    <li> 
        <h1 itemprop="name"  style="float: right;width: 100%;color: #FFF !important;text-align: right;font-size: 30px;padding-right: 10px;" class="title">{{ article.title }}</h1>    
        <div class="row-fluid">
            <ul style="list-style: none outside none; color: #999999; font-size:13px;" class="span12">
               <li style="width:100%">
             <!-- AddThis Button BEGIN -->
            <div class="addthis_toolbox addthis_default_style " addthis:url="{{ path('_detail_article', {'slug': article.slug}) }}" addthis:title="{{ item.title }}">
            <a class="addthis_button_facebook_like" fb:like:layout="button_count"></a>
            <a class="addthis_button_facebook_share" fb:share:layout="button_count"></a>
            <a class="addthis_button_google_plusone" g:plusone:size="medium"></a>
            </div>
            
            
            <!-- AddThis Button END -->
         </li>                  
            </ul>
        </div>
    </li>
    <li>
        <div class="row-fluid" style="line-height:22px;">
                <div class="span5"><img itemprop="image" class="img-polaroid" src="{% if article.getImage() != NULL %}{{  article.getImage() }} {% else %}  {{ asset('bundles/tunisiefeeds/images/urgent.jpg') }} {% endif %}" alt="{{ article.title }}"/></div>
                <div class="span7">
            <div itemprop="articleBody"  style="font-size: large; text-align: right;">{{ article.description | raw }}</div>
            <div><br /></div>
            
        </div>
        <ul class="pluginLinks" style="position: relative;right: -6px;float: right;bottom: -6px;">
            <li><span itemprop="datePublished" content="{{ article.createdAt|date('Y-m-d')}}"  class="btn btn-info" ><i  class="icon-calendar f14 grIcon"></i> {{ article.createdAt|date('j F, Y')}}</span></li>
           
            <li> <a rel="tag" class="btn btn-danger btn-lg" href="{% if article.feed.id != null %} {{ path('_category_article', {'type': 'feed', 'factory' : article.feed.factory, 'favicon' : article.feed.favicon}) }} {% else %} {{ path('_category_article', {'type': 'jarida',  'factory' : article.jarida.factory, 'favicon' : article.jarida.favicon}) }} {% endif %}" role="button"><span itemprop="author" itemscope itemtype="http://schema.org/Person">  <span itemprop="name">{% if article.getFeed().getSource() != null %} {{ article.getFeed().getSource() }} {% else %} {{ article.getJarida().getSource() }} {% endif %}</span></span> : مصدر<span class="glyphicon glyphicon-list-alt"></span></a></li>
        </ul>
        </div>
        
    </li>
    <li>
        <div class="row-fluid">
           
             <div class="addthis_toolbox addthis_default_style " addthis:url="{{ path('_detail_article', {'slug': article.slug}) }}" addthis:title="{{ item.title }}">

{% extends "TunisieFeedsBundle::layout.html.twig" %}



{% block content %}
 {{ render(controller('TunisieFeedsBundle:Default:header')) }}
  
 <div class="container grey">

     <div class="col-xs-12 col-md-9" style="float: right;padding-left:0;padding-right:0">
        <div class="col-xs-12">
            {% for item in pagination %}

                <div class="hidden-xs col-sm-1 top-margin" style="float: right;clear: both;">
                                    <p class="month">{{ item.getArabicMonth() }}</p>
                                    <p class="day">{{ item.createdAt|date('j')}}</p>
                </div>
                <div class="col-xs-12 col-sm-11 white">
                            <div class="row">
                                    
                                    <div class="col-xs-12 col-sm-11" style="float: right">
                                                <a href="{{ path('_detail_article', {'slug': item.slug}) }}" class="title">
                                                    <h3  style="text-align: right;">
                                                  {{ item.title }}       
                                            </h3></a>
                                            </div>
                                    <div class="hidden-xs col-sm-1  pull-left" >
                                        <a href="{% if item.feed.id != null %} {{ path('_category_article', {'type': 'feed', 'factory' : item.feed.factory, 'favicon' : item.feed.favicon}) }} {% else %} {{ path('_category_article', {'type': 'jarida',  'factory' : item.jarida.factory, 'favicon' : item.jarida.favicon}) }} {% endif %}" ><span class="label label-danger">{{ item.getFeed().getSource() }}</span></a>
                                            </div>
                            </div>
                            <div class="row">
                                    <div class="col-xs-12 col-sm-3 " style="float: right">
                                    <img title="{{ item.title }}" src="{% if item.getImage() != NULL %}{{  item.getImage() }} {% else %}  {{ asset('bundles/tunisiefeeds/images/urgent.jpg') }} {% endif %}">
                                    </div>
                                    <div class="col-xs-12 col-sm-9" style="float: right;text-align: right">
                                        <div style="min-height: 80px;">
                                        <p>
                                            {{ item.description | truncate(450, true, '...') | raw }}
                                        </p>
                                        </div>
                                            <a class="pull-left readme" href="{{ path('_detail_article', {'slug': item.slug}) }}">إقرأ المزيد</a>
                                    </div>
                                    
                            </div>
                </div>
{% endfor %}
            
                
            

        </div>
        

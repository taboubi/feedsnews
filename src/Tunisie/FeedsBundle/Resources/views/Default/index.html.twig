<div  style="padding:20px 10px 5px 15px;padding-bottom: 15px;">

    <h3 class="title" style="margin-top: -10px;padding: 0px 0 0px !important;font-size: 1.4em;line-height: 22px!important;text-align: right!important;width: 100%;float: right;">
        <a href="{{ path('_detail_article', {'slug': item.slug}) }}">{{ item.title }}</a>
    </h3>
    
    <div class="row-fluid">    
         <div class="span3"><a href="{{ path('_detail_article', {'slug': item.slug}) }}">
                 <img  title="{{ item.title }}" class="img-frame" src="{% if item.getImage() != NULL %}{{  item.getImage() }} {% else %}  {{ asset('bundles/tunisiefeeds/images/urgent.jpg') }} {% endif %}" alt="{{ item.title }}"/></a></div>
         <div class="span9" style="text-align: right"> 
             <p>{{ item.description | truncate(450, true, '...') | raw }}</p>
             <ul class="pluginLinks" style="position: relative;right: -6px;float: right;bottom: -6px;">
                 <li><span  class="btn btn-info" ><i  class="icon-calendar f14 grIcon"></i> {{ item.createdAt|date('j F, Y')}}</span></li>
                 <li><a rel="{{ item.title }}" href="{{ path('_detail_article', {'slug': item.slug}) }}" class="btn btn-primary btn-lg" role="button">إقرأ المزيد<span class="glyphicon glyphicon-list-alt"></span></a></li>
              <li> <a rel="tag" class="btn btn-danger btn-lg" href="{% if item.feed.id != null %} {{ path('_category_article', {'type': 'feed', 'factory' : item.feed.factory, 'favicon' : item.feed.favicon}) }} {% else %} {{ path('_category_article', {'type': 'jarida',  'factory' : item.jarida.factory, 'favicon' : item.jarida.favicon}) }} {% endif %}" role="button"> {{ item.getFeed().getSource() }} : مصدر<span class="glyphicon glyphicon-list-alt"></span></a></li>
            </ul>
                                    
